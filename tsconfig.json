{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2021"],
    "baseUrl": ".",
    "paths": {
      "types/*": ["src/types/*"],
      "common/*": ["src/common/*"],
      "request/*": ["src/request/*"],
      "processes/*": ["src/processes/*"]
    },
    "outDir": "dist",
    "declaration": true,

    /* Bundler mode */
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": false,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"]
}
